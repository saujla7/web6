<div class="container" style="padding-top:100px">
  <div class="row">
    <form action="/posts/add" method="POST" class="pt-1" enctype="multipart/form-data">
      <div class="form-group">
        <input required class="form-control" placeholder="Title" name="title">
      </div>
      <div class="form-group">
        <input class="form-control" placeholder="Body" name="body">
      </div>
      <div class="form-group">
        {{#if categories}}
        <select class="form-control" name="category" id="category">
          <option value="">Select Category</option>
          {{#each categories}}
          <option value="{{id}}">{{category}}</option>
          {{/each}}
        </select>
        {{else}}
        <div>No Categories</div>
        {{/if}}
      </div>
      <div class="form-group">
        <input type="file" id="file" accept="image/png, image/jpeg" class="form-control" name="featureImage"
          placeholder="Image">
      </div>
      <div class="form-group">
        <input type="checkbox" name="published"><label for="vehicle1"> Published</label>
      </div>
      <button type="submit" class="btn btn-success rounded-pill">Submit</button>
    </form>
  </div>
</div>