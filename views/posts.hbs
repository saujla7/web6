<div class="container" style="padding-top:60px">
    <div class="row">

        <div class="col-md-12">
            <h2>Posts <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
            <hr />


            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Post ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Post Date</th>
                        <th scope="col">Category</th>
                        <th scope="col">Published</th>
                        <th scope="col">Actons</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{title}}</td>
                        <td>{{#formatDate postDate}}{{/formatDate}}</td>
                        <td><a href="/posts?category={{category}}">{{category}}</a></td>
                        <td>{{published}}</td>
                        <td><a href="/posts/delete/{{id}}" class="btn btn-danger">Delete</a></td>
                    </tr>
                    {{/each}}
                    {{#unless posts}}
                    <tr>
                        <td colspan="5" class="col-md-12 text-center"> <strong>{{message}}</strong></td>
                    </tr>
                    {{/unless}}
                </tbody>
            </table>


        </div>
    </div>
</div>